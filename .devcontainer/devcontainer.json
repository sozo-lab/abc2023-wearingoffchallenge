{
  "name": "abc2023",
  "image": "cschranz/gpu-jupyter:v1.5_cuda-11.6_ubuntu-20.04",
  "runArgs": [
    "--name",
    "abc2023",
    "-p",
    "8888:8888",
    "-p",
    "6006:6006",
    "--env-file",
    ".devcontainer/devcontainer.env"
    //, "--gpus", "all" // JNV's note: Add this if you want to use GPU
  ],
  // JNV's note: This is important to prevent the container from running the 
  "overrideCommand": false,
  "containerUser": "root",
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "donjayamanne.githistory",
        "GitHub.copilot-nightly",
        "GitHub.copilot",
        "eamodio.gitlens",
        "ecmel.vscode-html-css",
        "REditorSupport.r",
        "RDebugger.r-debugger",
        "ms-python.autopep8",
        "ms-azuretools.vscode-docker",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-vsliveshare.vsliveshare",
        "ms-vscode.live-server",
        "GitHub.codespaces",
        "GrapeCity.gc-excelviewer"
      ]
    }
  }
  // JNV's note: For some reason, I'm having a hard time with these configs
  // "forwardPorts": [8888, 6006],
  // "appPort": [8888],
  // JNV's note: This works but having difficulty in forwarding the default NOTEBOOK_ARGS
  // "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && start.sh jupyter lab ${NOTEBOOK_ARGS}",
}